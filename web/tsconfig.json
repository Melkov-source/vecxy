{
  "compilerOptions": {
    "target": "ESNext", // Компилировать в современный JavaScript (для ESM)
    "module": "ESNext", // Используем ESM (ECMAScript Modules)
    "moduleResolution": "Node", // Для правильного разрешения модулей
    "outDir": "./dist", // Где будут скомпилированные файлы
    "rootDir": "./src", // Исходные файлы лежат в папке src
    "declaration": true, // Генерировать файлы типов (.d.ts)
    "declarationMap": true, // Генерировать карты для типов (.d.ts.map)
    "strict": true, // Включить строгий режим (для лучшего контроля над кодом)
    "esModuleInterop": true, // Для импорта CommonJS модулей
    "skipLibCheck": true, // Пропускать проверку типов в библиотеках (для скорости)
    "forceConsistentCasingInFileNames": true, // Убедиться, что регистр букв в файлах одинаков
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts" // Включаем все файлы .ts в папке src
  ],
  "exclude": [
    "node_modules" // Исключаем папку node_modules
  ]
}