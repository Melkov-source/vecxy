{
    "compilerOptions": {
        "target": "ESNext", // Устанавливаем цель компиляции в ESNext (для современных браузеров)
        "module": "ESNext", // Используем модули ESNext
        "moduleResolution": "Node", // Для корректного разрешения модулей
        "outDir": "./build", // Папка для выходных файлов
        "rootDir": "./src", // Папка с исходными файлами
        "strict": true, // Включаем строгий режим (полезно для лучшей типизации)
        "esModuleInterop": true, // Для работы с CommonJS модулями
        "skipLibCheck": true, // Пропускаем проверку библиотек (ускоряет компиляцию)
        "allowJs": true, // Разрешаем использование JavaScript файлов в проекте
        "sourceMap": true // Генерация source maps для отладки
    },
    "include": [
        "src/**/*.ts" // Включаем все файлы .ts из папки src
    ],
    "exclude": [
        "node_modules" // Исключаем node_modules
    ]
}